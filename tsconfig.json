{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true
    },
    "rules": {
      "unified-signatures": false
    },
    "include": [
      "index.ts"
    ],
    "exclude": [
      "node_modules",
      "**/__tests__/*",
      "test"
    ]
  }